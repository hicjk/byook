@model IEnumerable<Product>

<div class="container mt-100">
    <h3 class="text-center mb-3">등록한 상품 목록</h3>
    <div class="row row-cols-3">
        @{
            foreach(var item in Model)
            {
                <div class="col p-2 mb-4">
                    
                    <div>
                        <a style="color: black;" asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id"><img style="width: 300px;" src="@item.ImageUrl" /></a>
                    </div>
                    <div>
                        <h5>@item.Comment</h5>
                        <p>@(item.Price.ToString("#,0"))원</p>
                        <span>@(item.Weight)g</span>
                    </div>
                </div>
            }
        }
    </div>
</div>

