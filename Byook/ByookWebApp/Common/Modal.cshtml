<style>
    #modal {
        display: none;
        position: absolute;
        top: 0px;
        left: 0px;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.4);
    }

        #modal.show {
            display: block;
        }

    .modal_body {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 400px;
        height: 300px;
        padding: 30px;
        background-color: rgb(255, 255, 255);
        transform: translateX(-50%) translateY(-50%);
    }

    .modalCloseButton {
        width: 19px;
        height: 19px;
        border: 0px;
        float: right;
        cursor: pointer;
    }

    .modalBottom {
        position: absolute;
        width: 340px;
        padding-top: 20px;
        margin-bottom: 20px;
        text-align: center;
        bottom: 0px;
        border-top: 1px solid #ccc;
    }
</style>

<div id="modal">
    <div class="modal_body">
        <div>
            <span>알림메세지</span>
            <img class="modalCloseButton mt-1" src="~/images/icon-close-button.png" />
        </div>
        <div class="text-center mt-5">
            <span id="message"></span>
        </div>
        <div class="modalBottom">
            <button type="button" class="button">확인</button>
        </div>
    </div>
</div>

<script>
    const modal = $("#modal");

    modal.click(function(event) {
        if (event.target === modal[0]) {
            closeModal();
        }
    });

    $(".modalCloseButton").click(function() {
        closeModal();
    });

    $("#modal .button").click(function() {
        closeModal();
    })

    function showModal(text) {
        modal.addClass("show");

        inputText(text);
    }

    function closeModal() {
        modal.removeClass("show");
    }

    function inputText(text) {
        $("#modal #message").text(text);
    }

</script>